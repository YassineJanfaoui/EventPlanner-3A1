<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.Details" spacing="10" padding="20">
    <ImageView fx:id="eventImageView" fitHeight="150" fitWidth="200" preserveRatio="true"/>
    <Label fx:id="eventNameLabel" style="-fx-font-size: 18px; -fx-text-fill: #2A2A72;"/>
    <Label fx:id="eventStartDateLabel" style="-fx-font-size: 14px; -fx-text-fill: #2A2A72;"/>
    <Label fx:id="eventEndDateLabel" style="-fx-font-size: 14px; -fx-text-fill: #2A2A72;"/>
    <Label fx:id="eventMaxParticipantsLabel" style="-fx-font-size: 14px; -fx-text-fill: #2A2A72;"/>
    <Label fx:id="eventDescriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #2A2A72;" wrapText="true"/>
    <Label fx:id="eventFeeLabel" style="-fx-font-size: 14px; -fx-text-fill: #2A2A72;"/>
</VBox>